<% provide(:title, "Log in") %>

<div class="first-row">
	<div class="login_form">
		<h1>Log in</h1>
		<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Log in" %>

		<% end %>

		<p>Don't have an account yet? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>